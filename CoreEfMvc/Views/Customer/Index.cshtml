@model IEnumerable<coreEfMvc.Models.Customer>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped align-content-center align-items-center">
	<thead class="align-content-center align-items-center">
		<tr class="align-content-center align-items-center ">
			<th>
				@Html.DisplayNameFor(model => model.ImageUrl)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FirstName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LastName)
			</th>
			<th>
				Edit
			</th>
			<th>
				Details
			</th>
			<th>
				Delete
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="align-content-center">
				<td class="align-content-center">
					<img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.ImageUrl)" class="rounded-circle m-auto w-25 align-self-center" style="width:30px;height:30px;"/>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>

				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">Edit</a>
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning mx-2">Details</a>
				</td>
				<td>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
